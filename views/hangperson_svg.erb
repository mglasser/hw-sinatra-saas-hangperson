<svg id="hangperson-svg" height="300" width="200">
	<!--Hang Equipment -->
	<g class=<%= @game.hangman_image_status[8] %>
		<!-- Vertical Pole -->
		<line x1="50" y1="10" x2="50" y2="280" style="stroke: black; stroke-width: 5" />
		<!-- Base -->
		<line x1="10" y1="280" x2="90" y2="280" style="stroke: black; stroke-width: 5" />
		<!-- Top Horizontal -->
		<line x1="47.5" y1="10" x2="150" y2="10" style="stroke: black; stroke-width: 5" />
		<!-- Hanger -->
		<line x1="150" y1="7.5" x2="150" y2="50" style="stroke: black; stroke-width: 5" />
	</g>
	<!--Person -->
	<g transform="translate(100,20)">
		<!--- Head -->
		<circle class=<%= @game.hangman_image_status[0] %> cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="wheat" />

		<!-- Body -->
		<line class=<%= @game.hangman_image_status[1] %> x1="50" y1="90" x2="50" y2="170" style="stroke: black; stroke-width: 4" />

		<!-- Left Arm -->
		<line class=<%= @game.hangman_image_status[2] %> x1="50" y1="120" x2="10" y2="100" style="stroke: black; stroke-width: 4" />

		<!-- Right Arm -->
		<line class=<%= @game.hangman_image_status[3] %> x1="50" y1="120" x2="90" y2="100" style="stroke: black; stroke-width: 4" />

		<!-- Left Leg -->
		<line class=<%= @game.hangman_image_status[4] %> x1="50" y1="169" x2="10" y2="220" style="stroke: black; stroke-width: 4" />

		<!-- Right Leg -->
		<line class=<%= @game.hangman_image_status[5] %> x1="50" y1="169" x2="90" y2="220" style="stroke: black; stroke-width: 4" />

		<!-- Dead Face -->
		<!-- Left Eye -->
		<g class=<%= @game.hangman_image_status[6] %> >
			<line x1="35" y1="37" x2="45" y2="47" style="stroke: black; stroke-width: 2" />
			<line x1="45" y1="37" x2="35" y2="47" style="stroke: black; stroke-width: 2" />
			<!-- Right Eye -->
			<line x1="55" y1="37" x2="65" y2="47" style="stroke: black; stroke-width: 2" />
			<line x1="65" y1="37" x2="55" y2="47" style="stroke: black; stroke-width: 2" />
			<!-- Mouth -->
			<line x1="34" y1="65" x2="66" y2="65" style="stroke: black; stroke-width: 2" />
		</g>

		<!-- Happy Face -->
		<!-- Left Eye -->
		<g class=<%= @game.hangman_image_status[7] %>  >
			<ellipse cx="40" cy="42" rx="6" ry="5" style="stroke: black; stroke-width: 1; fill: #42A5F5" />
			<circle cx="40" cy="42" r="1" style="fill: black;" />
			<!-- Right Eye -->
			<ellipse cx="60" cy="42" rx="6" ry="5" style="stroke: black; stroke-width: 1; fill: #42A5F5" />
			<circle cx="60" cy="42" r="1" style="fill: black;" />
			<!-- Mouth -->
			<path d="M 34 65 Q 49 75 66 65" stroke="red" stroke-width="2" fill="none" />
		</g>
	</g>
</svg>